extends layout

block content

  div(style="padding: 15% 38%")
    form(method="post", class="form-horizontal", action="/auth/local",)
      div.form-group
        div.col-lg-12
          input.form-control(type="text", value="", name="username", placeholder="Ваш логин")
      div.form-group
        div.col-lg-12
          input.form-control(type="password", value="", name="password", placeholder="Ваш пароль")
      div.form-group
        div.col-lg-12
          button(type="submit", class="btn btn-default") Войти

          div.h-list.m-l10.f-right
            a(href="/auth/facebook", title="facebook", class="social-icon-link")
              i(class="icon-facebook-sign icon-2x")
            a(href="/auth/twitter", title="twitter", class="social-icon-link")
              i(class="icon-twitter-sign icon-2x")
            a(href="/auth/github", title="github", class="social-icon-link")
              i(class="icon-github icon-2x")
      - if (locals.authErr == 'passport-error') {
          div.control-group
            label(class="label label-danger") ошибка авторизации
      - }
    div.clearfix


